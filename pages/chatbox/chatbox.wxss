/* pages/chatbox/chatbox.wxss */
.teacher{
  background-color: red;
}
.student {
  background-color: green;
}

.chat{
	display: flex;
	flex-flow: row wrap;
	align-items: flex-start;
	margin-bottom: 10px;
}

.chat .user-photo{
	width: 60px;
	height: 60px;
	background: #ccc;
	border-radius: 50%;
	overflow: hidden;
}

.chat .user-photo img{
	width:100%;
}
.chat .chat-message{
	width: 70%;
	padding: 15px;
	margin: 5px 10px 0;
	
	border-radius: 10px;
	color: #fff;
	font-size: 20px;
}

.student .chat-message{
	background: #1adda4;
}

.teacher .chat-message{
	background: #1ddced;
	order: -1;
}

